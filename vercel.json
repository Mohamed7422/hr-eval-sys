{
  "version": 2,
  "env": {
    "DJANGO_SETTINGS_MODULE": "hr_evaluation.settings"
  },
  "builds": [
    {
      "src": "hr_evaluation/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12",
        "maxLambdaSize": "15mb"
      }
    }
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)","dest": "hr_evaluation/wsgi.py" }
  ]
}
